%ol.breadcrumb
  %li
    %a{href: root_path} Categories
  %li
    %a{href: category_path(category)} #{category.name}
  %li.active #{product.title}

%h2 #{product.title} #{link_to raw('<span class="glyphicon glyphicon-pencil small"></span>'), edit_category_product_path(category.id, product.id)}

= image_tag(product.picture, :width => 600)
%p
  %b Description:
  = product.description
%p
  %b Price: $ #{product.price}

%p
  %b Category:
  = product.category.name
%p
  %b Average Rating:
  = product.average_rating
%p
  %b Reviews:
  = render reviews
  %br
  - if user_signed_in?
    = render 'reviews/form'
  - else
    .alert.alert-info #{link_to 'Sign in', new_user_session_path} to add new review


= link_to 'Back', category_path(category)
