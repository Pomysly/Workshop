%h1 Listing categories

%table.table.table-striped.narrow
  %tr
    %th Name
    %th
    %th

  - categories.each do |category|
    %tr
      %td= link_to "#{category.name}", category
      %td= link_to 'Edit', edit_category_path(category)
      %td= link_to raw('<span class="glyphicon glyphicon-trash"></span>'), category, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Category', new_category_path, class: "btn btn-large btn-primary"
