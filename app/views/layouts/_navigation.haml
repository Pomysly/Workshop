.navbar.navbar-inverse
  .container
    .navbar-header
      %button.navbar-toggle.collapsed{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      =link_to "ZT Sport Horses", root_path , id: "logo"
    #bs-example-navbar-collapse-1.collapse.navbar-collapse
      %ul.nav.navbar-nav.pull-right
        %li= link_to 'Horses for sale', root_path
        %li= link_to 'About us', pages_about_path
        %li= link_to 'Contact', pages_contact_path
        - if user_signed_in?
          %li= link_to 'Logout', destroy_user_session_path, method: :delete
        %li
          #google_translate_element
            :javascript
              function googleTranslateElementInit() {
                new google.translate.TranslateElement({pageLanguage: 'en', includedLanguages: 'de,es,fr,pl,ru', layout: google.translate.TranslateElement.InlineLayout.SIMPLE}, 'google_translate_element');
              }
            %script{:src => "//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit", :type => "text/javascript"}
                    